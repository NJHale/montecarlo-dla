<?xml version="1.0" encoding="UTF-8"?>
<project name="module_montecarlo-dla" default="compile.module.montecarlo-dla">
  <dirname property="module.montecarlo-dla.basedir" file="${ant.file.module_montecarlo-dla}"/>
  
  <property name="module.jdk.home.montecarlo-dla" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.montecarlo-dla" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.montecarlo-dla" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.montecarlo-dla" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="montecarlo-dla.output.dir" value="${module.montecarlo-dla.basedir}/out/production/montecarlo-dla"/>
  <property name="montecarlo-dla.testoutput.dir" value="${module.montecarlo-dla.basedir}/out/test/montecarlo-dla"/>
  
  <path id="montecarlo-dla.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="montecarlo-dla.module.production.classpath">
    <path refid="${module.jdk.classpath.montecarlo-dla}"/>
  </path>
  
  <path id="montecarlo-dla.runtime.production.module.classpath">
    <pathelement location="${montecarlo-dla.output.dir}"/>
  </path>
  
  <path id="montecarlo-dla.module.classpath">
    <path refid="${module.jdk.classpath.montecarlo-dla}"/>
    <pathelement location="${montecarlo-dla.output.dir}"/>
  </path>
  
  <path id="montecarlo-dla.runtime.module.classpath">
    <pathelement location="${montecarlo-dla.testoutput.dir}"/>
    <pathelement location="${montecarlo-dla.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.montecarlo-dla">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.montecarlo-dla">
    <patternset refid="excluded.from.module.montecarlo-dla"/>
  </patternset>
  
  <path id="montecarlo-dla.module.sourcepath">
    <dirset dir="${module.montecarlo-dla.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.montecarlo-dla" depends="compile.module.montecarlo-dla.production,compile.module.montecarlo-dla.tests" description="Compile module montecarlo-dla"/>
  
  <target name="compile.module.montecarlo-dla.production" depends="register.custom.compilers" description="Compile module montecarlo-dla; production classes">
    <mkdir dir="${montecarlo-dla.output.dir}"/>
    <javac2 destdir="${montecarlo-dla.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.montecarlo-dla}/javac">
      <compilerarg line="${compiler.args.montecarlo-dla}"/>
      <bootclasspath refid="montecarlo-dla.module.bootclasspath"/>
      <classpath refid="montecarlo-dla.module.production.classpath"/>
      <src refid="montecarlo-dla.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.montecarlo-dla"/>
    </javac2>
    
    <copy todir="${montecarlo-dla.output.dir}">
      <fileset dir="${module.montecarlo-dla.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.montecarlo-dla.tests" depends="register.custom.compilers,compile.module.montecarlo-dla.production" description="compile module montecarlo-dla; test classes" unless="skip.tests"/>
  
  <target name="clean.module.montecarlo-dla" description="cleanup module">
    <delete dir="${montecarlo-dla.output.dir}"/>
    <delete dir="${montecarlo-dla.testoutput.dir}"/>
  </target>
</project>